<div class="container_views">
    <h1>Local Register</h1>
    <form
        action="/api/sessions/localregister"
        method="post"
        class="form_local_register"
    >
        <div class="input_container">
            <div class="input_container_session">
                <label for="" class="input_label">FirstName:</label>
                <input type="text" name="firstName" class="input_data" />

                <label for="" class="input_label">LastName:</label>
                <input type="text" name="lastName" class="input_data" />

                <label for="" class="input_label">Email:</label>
                <input type="email" name="email" class="input_data" />

            </div>

            <div class="input_container_session">
                <label for="" class="input_label">Age:</label>
                <input type="number" name="age" class="input_data" />

                <label for="" class="input_label">Password:</label>
                <input type="password" name="password" class="input_data" />

                <label for="" class="input_label">Role:</label>
                <input type="text" name="role" class="input_data" />
            </div>
        </div>

        <input type="submit" value="Enviar" class="input_submit" />
    </form>
</div>